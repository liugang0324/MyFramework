<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <include layout="@layout/header_layout"
        android:id="@+id/head_layout"
        ></include>
    <TextView
        android:id="@+id/tv_my_follow"
        style="@style/TextView.MainSlide.Item.Type1"
        android:text="我的关注"
        android:layout_below="@+id/head_layout"
        />
    <TextView
        android:id="@+id/tv_my_collection"
        android:layout_below="@id/tv_my_follow"
        style="@style/TextView.MainSlide.Item.Type1"
        android:text="我的收藏"/>
    <TextView
        android:id="@+id/tv_search_friend"
        android:layout_below="@id/tv_my_collection"
        style="@style/TextView.MainSlide.Item.Type1"
        android:text="搜索好友"/>
    <TextView
        android:id="@+id/tv_msg_notify"
        android:layout_below="@id/tv_search_friend"
        style="@style/TextView.MainSlide.Item.Type1"
        android:text="消息通知"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/raw_1499947056"
                android:layout_above="@+id/user_zuopin"
                android:layout_marginLeft="40dp"
                />
            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的作品"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:id="@+id/user_zuopin"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/raw_1499947157"
                />
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:id="@+id/user_setting"
                />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>